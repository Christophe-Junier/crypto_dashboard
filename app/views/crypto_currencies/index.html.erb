<div class='main bg-primary'>
  <div class="d-flex justify-content-evenly flex-wrap">
    <% @crypto_currencies.each do |crypto_currency| %>
        <div class="mt-3 mb-3 col-lg-2">
            <div class="card text-center">
                <h5 class="card-header">
                    <%= crypto_currency_complete_name(crypto_currency) %>
                </h5>
                <div class="card-body">
                    <p class="card-text d-flex justify-content-center">
                      <%= image_tag crypto_currency.fullname, width: 100, class: 'd-block' %>
                    </p>
                    <a href="<%= crypto_currency_index_path(id: crypto_currency.id) %>" class="btn btn-primary">
                      <%= t("crypto_currencies.consult") %>
                    </a>
                </div>
                <div class="card-footer text-body-secondary">
                    <%= t("crypto_currencies.last_update") %>
                    <%= format_time(crypto_currency.created_at) %>
                </div>
            </div>
        </div>
    <% end %>
  </div>
</div>